<Window x:Class="Scenebot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scenebot"
        mc:Ignorable="d"
        Title="Gigglerekt Scenebot" 
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Style="{StaticResource mainBorder}" MouseDown="moveWindow">
        <Grid>
            <Label Style="{StaticResource titleLabel}" Content="Gigglerekt Scenebot" HorizontalAlignment="Left" VerticalAlignment="Top" Height="30"/>
            <Button Style="{StaticResource closeButton}" Margin="765,5,0,0" Click="closeWindow"/>
            <Button Style="{StaticResource minimizeButton}" Margin="730,5,0,0" Click="minimizeWindow"/>


        </Grid>
    </Border>
</Window>
