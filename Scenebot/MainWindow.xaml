<Window x:Class="Scenebot.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Scenebot"
        mc:Ignorable="d"
        Title="Gigglerekt Scenebot" 
        Height="450" Width="800"
        WindowStyle="None"
        ResizeMode="NoResize"
        AllowsTransparency="True"
        Background="Transparent">
    <Border Style="{StaticResource mainBorder}">
        <Grid>
            <Button Style="{StaticResource closeButton}" Margin="775,10,0,0" Tag="close"/>
            <Button Style="{StaticResource minimizeButton}" Margin="752,10,0,0" Tag="minimize"/>
            
        </Grid>
    </Border>
</Window>
